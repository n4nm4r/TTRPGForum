@model TTRPGForum.Models.Comment

@{
    ViewData["Title"] = "Add comment";
}

<h1>Create</h1>

<h4>Comment</h4>
<form asp-action="Create">
    <div class="form-group">
        <label asp-for="Content" class="control-label">Comment</label>
        <textarea asp-for="Content" class="form-control" rows="5"></textarea>
        <span asp-validation-for="Content" class="text-danger"></span>
    </div>

    <!-- Hidden field for DiscussionId -->
    <input type="hidden" value="@ViewBag.DiscussionId" name="DiscussionId" />

    <div class="form-group">
        <button type="submit" class="btn btn-primary">Submit</button>
    </div>
</form>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
