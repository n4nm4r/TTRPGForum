@model TTRPGForum.Models.Comment

@{
    ViewData["Title"] = "Add Comment";
}

<h1 class="mb-4">Add a Comment</h1>

<form asp-action="Create" method="post">
    <input type="hidden" asp-for="DiscussionId" value="@ViewData["DiscussionId"]" />

    <div class="form-group mb-3">
       
        <textarea asp-for="Content" class="form-control" rows="5" placeholder="Write your comment here..." required></textarea>
        <span asp-validation-for="Content" class="text-danger"></span>
    </div>

    <div class="form-group">
        <button type="submit" class="btn btn-success">Post Comment</button>
        <a asp-action="GetDiscussion" asp-controller="Home" asp-route-id="@ViewData["DiscussionId"]" class="btn btn-secondary ms-2">Back to Discussion</a>
    </div>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
